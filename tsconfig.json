{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "node_modules/aws-sdk/index.d.ts",
    "node_modules/aws-sdk/global.d.ts"
  ],
  "exclude": [
    "lib/**/*",
    "node_modules",
    "typings",
    "**/*-spec.ts"
  ]
}
